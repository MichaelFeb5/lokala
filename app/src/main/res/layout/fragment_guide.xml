<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.guide.GuideFragment"
    android:background="@color/white"
    >


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bacground_title_guide"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/rounded_bottom_corner"
        android:elevation="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title_guide"
            android:layout_width="251dp"
            android:layout_height="86dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/inter_extrabold"
            android:lines="2"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/image_guide"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:contentDescription="@string/landing_page_1" />

        <LinearLayout
            android:layout_width="234dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:layout_marginTop="82dp"
            android:background="@drawable/card_outline"
            android:elevation="20dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_title_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/josefin_sans"
                android:text="@string/title"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/layout_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bacground_title_guide">

        <ImageView
            android:id="@+id/circle_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/circle_1" />

        <ImageView
            android:id="@+id/circle_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/circle_2" />

        <ImageView
            android:id="@+id/circle_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/circle_3" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>